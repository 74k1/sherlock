<interface>
    <object class="GtkListBoxRow" id="holder">
        <style>
            <class name="tile"/>
            <class name="error"/>
        </style>

        <child>
            <object class="GtkBox">
                <property name="orientation">vertical</property>
                <property name="hexpand">true</property> 

                <child>
                    <object class="GtkBox" id="error-title-bar">
                        <property name="valign">center</property>
                        <property name="name">error-title-bar</property>
                        <child>
                            <object class="GtkBox">
                                <property name="valign">center</property>
                                <child>
                                    <object class="GtkLabel" id="error-title">
                                        <property name="name">error-title</property>
                                        <property name="xalign">0</property>
                                    </object>
                                </child>
                            </object>
                        </child>
                    </object>
                </child>

                <child>
                    <object class="GtkBox" id="content-holder">
                        <property name="name">error-content-holder</property>
                        <property name="orientation">vertical</property>
                        <property name="spacing">5</property>
                        <property name="valign">center</property>
                        <property name="hexpand">true</property>

                        <child>
                            <object class="GtkLabel" id="content-title">
                                <property name="name">error-content-title</property>
                                <property name="xalign">0</property>
                            </object>
                        </child>
                        <child>
                            <object class="GtkTextView" id="content-body">
                                <property name="name">error-content-body</property>
                                <property name="wrap-mode">word</property>
                            </object>
                        </child>

                    </object>
                </child>
            </object>
        </child>
    </object>
</interface>
